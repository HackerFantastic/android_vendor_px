#!/system/bin/sh
# Boot into chroot environment

# Export chroot directory into variable
export NEW_ROOT=/data/local/kali

/system/bin/toybox sysctl -w net.ipv4.ip_forward=1 > /dev/null 2>&1

# Setup environment variables for shell environment
export HOME=/root
export PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/opt/pwnix/bin
export TERM=xterm-color
export TZ=America/New_York
export LANG=en_US.UTF-8
unset LD_PRELOAD

echo "[!] Welcome to the Pwn zone. Get your game face on."

# /data is being mounted with nosuid which breaks sudo/su in the chroot
if /system/bin/toybox mount |/system/bin/toybox grep "/data " |/system/bin/toybox grep -q nosuid; then
  /system/bin/toybox mount -o remount,suid /data
fi

# Normalize the Android env going into the chroot to avoid env conflicts
export SHELL=/bin/bash
unset MKSH
unset TERMINFO
unset TMPDIR

if [ -n "$1" ]; then
  # Run the seeded task in the chroot
  /system/bin/toybox chroot $NEW_ROOT /bin/bash --login -c $1
fi

# Drop user to shell
/system/bin/toybox chroot $NEW_ROOT /bin/bash --login
