#!/system/bin/sh
# Initial chroot setup

if [ ! -x /system/bin/getprop ]; then
  /system/bin/toybox printf "Unable to execute /system/bin/getprop (needed for device detection)\n"
  exit 1
fi

if /system/bin/toybox grep -q squashfs /proc/filesystems; then
  if [ ! -f /sdcard/Android/data/com.pwnieexpress.android.pxinstaller/files/stockchroot.sfs ]; then
    /system/bin/toybox printf "Unable to read stockchroot.sfs\n"
    exit 1
  else
    chroot_file="/sdcard/Android/data/com.pwnieexpress.android.pxinstaller/files/stockchroot.sfs"
  fi
else
  /system/bin/toybox printf "No squashfs support present\n"
  exit 1
fi

# Error fast
set -e

# Unpack chroot
/system/bin/toybox mkdir -p /data/local/kali
/system/bin/toybox mkdir -p /data/local/kali-tmp
/system/bin/toybox cp "${chroot_file}" /data/local
/system/bin/toybox mount -t auto /data/local/stockchroot.sfs /data/local/kali-tmp
/system/bin/toybox cp -a /data/local/kali-tmp/* /data/local/kali
/system/bin/toybox umount /data/local/kali-tmp
/system/bin/toybox rm -rf /data/local/kali-tmp
/system/bin/toybox rm /data/local/stockchroot.sfs

# Fix chroot permissions
/system/bin/toybox chmod 0755 /data/local/kali

# Detect form factor
hardw=$(/system/bin/getprop ro.build.characteristics | /system/bin/toybox cut -d, -f1)
case ${hardw} in
  phone)
    PRODUCT="Pwn Phone"
    product="pwnphone"
    ;;
  tablet)
    PRODUCT="Pwn Pad"
    product="pwnpad"
    ;;
  *) exit 1 ;;
esac

# Set product based on form factor
echo "$PRODUCT" > /data/local/kali/etc/product
echo "$product" > /data/local/kali/etc/hostname
/system/bin/toybox sed -i "s/127\.0\.0\.1.*/127.0.0.1      $product localhost/" /data/local/kali/etc/hosts
